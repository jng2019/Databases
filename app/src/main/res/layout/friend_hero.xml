<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_friendHero_name"
        android:layout_width="179dp"
        android:layout_height="76dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_friendHero_money"
        android:layout_width="200dp"
        android:layout_height="59dp"
        android:layout_marginTop="36dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView_friendHero_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_friendHero_clumsiness"
        android:layout_width="110dp"
        android:layout_height="67dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView_friendHero_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_friendHero_name" />
</androidx.constraintlayout.widget.ConstraintLayout>